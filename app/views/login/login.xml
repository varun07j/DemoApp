<Page loaded="loaded">
    <Page.actionBar>
        <ActionBar title="Sign up"></ActionBar>
    </Page.actionBar>    
    <StackLayout orientation="vertical">
        
        <Image src="res://newheader_logo" stretch="none" horizontalAlignment="center" ></Image>
        
        <TextField id="email" text="{{ email }}" hint="Email Address" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
        <TextField secure="true" text="{{ password }}" hint="Password" />

        <Button text="Sign in" class="link" tap="signIn"/>
        <Button text="Sign up for Portal" class="link" tap="register"/>

    </StackLayout>
</Page>